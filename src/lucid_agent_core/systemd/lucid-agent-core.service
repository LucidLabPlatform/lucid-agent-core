[Unit]
Description=LUCID Agent Core
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=lucid
Group=lucid
WorkingDirectory=/var/lib/lucid
EnvironmentFile=/etc/lucid/agent-core.env
Environment=PYTHONUNBUFFERED=1
ExecStart=/opt/lucid/agent-core/venv/bin/lucid-agent-core run
Restart=always
RestartSec=5
TimeoutStartSec=30
SyslogIdentifier=lucid-agent-core

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/lucid /var/log/lucid
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true
LockPersonality=true
MemoryDenyWriteExecute=true
RestrictRealtime=true
RestrictSUIDSGID=true

[Install]
WantedBy=multi-user.target
